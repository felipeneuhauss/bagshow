{% extends 'default/internal.twig' %}
{% block title %} - Meus dados{% endblock %}

{% use "user/crop.twig" %}

{% block content %}
    {% block crop %}
        {{parent()}}
    {% endblock %}
<div class="row-fluid">
        <h3 class="heading">Minhas informações <small><span class="f_req">*</span> Campos obrigatórios</small></h3>
        <form class="form_validation_ttip" novalidate="novalidate" id="form-user" method="post">
            <div class="formSep">
                <div class="row-fluid">
                    <label for="fileinput" class="control-label">Avatar</label>
                    <div class="controls">
                        <div class="fileupload fileupload-new">
                            <div style="width: 100px; height: 100px;" class=" thumbnail">
                                <img src="http://www.placehold.it/100x100/EFEFEF/AAAAAA" alt="" />
                            </div>
                            <a href="#avatar-modal" role="button" class="btn" data-toggle="modal">
                                Editar avatar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label>Usuário</label>
                        <input type="text" name="inputGivenname" class="span8 required">
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label>E-mail </label>
                        <strong></strong><span id="user-email-span"></span></strong>
                    </div>
                </div>
            </div>
            <div class="formSep">
                <div class="row-fluid">
                    <div class="span12">
                        <label>Dia de nascimento</label>
                        <input type="text" name="inputDayOfBirth" class="span8 required" placeholder="Dia do seu nascimento">
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label>Mês de nascimento</label>
                        <input type="text" name="inputMonthOfBirth" class="span8 required" placeholder="mês do seu nascimento">
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label>Ano de nascimento<span class="f_req"></span></label>
                        <input type="text" name="inputYearOfBirth" class="span8" placeholder="Ano do seu nascimento">
                    </div>
                </div>
            </div>
            <div class="formSep">
                <div class="row-fluid">
                    <div class="span12">
                        <label>Regional<span class="f_req"></span></label>
                        <select id="regional" name="regional" class="required"></select>
                    </div>
                </div>
            </div>
            <div class="formSep">
                <div class="row-fluid">
                    <div class="span12">
                        <label><span class="error_placement">Deseja mudar sua senha?</span></label>

                        <label class="checkbox inline">
                            <input type="checkbox" value="0" id="change-password-check" name="change-password"> Sim
                        </label>
                    </div>
                </div>
            </div>
            <div class="formSep change-password-div hide">
                <div class="row-fluid">
                    <div class="span12">
                        <label>Nova senha</label>
                        <input type="password" class="required" id="inputPassword" name="inputPassword" placeholder="Senha" class="minlenth required" minlenth="3" />
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label>Repita sua nova senha</label>
                        <input type="password" name="inputConfirmPassword" id="inputConfirmPassword" placeholder="Confirme sua senha" class="required equalTo" equalTo="#inputPassword" />
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <button class="btn btn-inverse" type="submit">Salvar atualizações</button>
            </div>
        </form>
</div>
<script src="/app/user/user.form.js"></script>

{% endblock %}

