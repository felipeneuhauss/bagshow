{% extends 'layouts/admin/layout.twig' %}
{% block title %} - Ecobolsas{% endblock %}
{% block content %}
    <div class="row-fluid" ng-controller="BagListController">
        <div class="row-fluid">
            <div class="span12">
                <div class="box">
                    <div class="box-title">
                        <h3>
                            <i class="glyphicon-shopping_bag"></i>
                            Bolsas ecol√≥gicas
                        </h3>
                    </div>
                    <div class="box-content nopadding">
